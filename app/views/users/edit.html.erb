<h1>アカウント編集</h1>
<%= form_with model: @user do |form| %>
  <%= render 'shared/error_messages', object: form.object %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :avatar %>
  <%= form.file_field :avatar %>
  <%= form.hidden_field :avatar_cache %>
  <%= image_tag @user.avatar.url %>

  <%= form.submit t('.push') %>
<% end %>
