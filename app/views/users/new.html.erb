<div class="container">
  <div class= "new_account">
    <h1 class= "text-center p-3 m-3">アカウント作成</h1>
      <%= form_with model: @user do |form| %>
        <%= render 'shared/error_messages', object: form.object %>
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>

        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control" %>

        <%= form.label :avatar, class: "form-label" %>
        <%= form.file_field :avatar, class: "form-control" %>
        <%= form.hidden_field :avatar_cache %>

        <%= form.label :instagram_account_url, class: "form-label" %>
        <%= form.text_field :instagram_account_url, class: "form-control" %>

        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control" %>

        <%= form.label :password_confirmation, class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-control" %>

        <%= form.submit "送信", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>