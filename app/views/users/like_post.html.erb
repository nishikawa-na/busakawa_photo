<div class="container">
  <div class="row w-100">
    <div class="user_like_posts">
      <h1 class="text-center p-3 m-3">いいね投稿一覧</h1>
      <% @posts.each do |post| %>
        <div class="col-xs-12 col-sm-4 col-md-3 border border-info text-center m-2">
          <%= link_to post_path(post), class: "post_show" do %>
            <%= image_tag post.images[0].url, size: '250x250' %>
            <div class="title">
              <%= post.title %>
            </div>
          <% end %>
          <div class="user">
            <%= post.user.name %>
            <%= image_tag post.user.avatar.url, class: "rounded-circle",size: '50x50' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= paginate @posts %>