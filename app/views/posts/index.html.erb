<div class="container">
  <h1 class= "text-center p-3 m-3 posts_title">ランキング</h1>
  <%= render 'posts/ranking', ranking_posts: @ranking_posts %>
  <h1 class= "text-center p-3 m-3 posts_title">投稿一覧</h1>
    <div class="row justify-content-center">
      <% @posts.each do |post| %>
        <div class="col-xs-12 col-md-4 border border-info text-center p-2">
          <%= link_to post_path(post), class: "post_show" do %>
            <%= image_tag post.images[0].url, size: '200x200' %>
            <div class="title">
              <%= post.title %>
            </div>
          <% end %>
          <% if logged_in? %>
            <div id= "like_post-<%= post.id %>">
              <%= render 'like_posts/like_button', post: post %>
            </div>
          <% end %>
          <div class="user">
            <%= image_tag post.user.avatar.url, class: "rounded-circle", size: '50x50' %>
            <%= post.user.name %>
          </div>
        </div>
      <% end %>
    </div>
</div>
<%= paginate @posts %>