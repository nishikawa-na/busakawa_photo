<div class="container">
  <div class="row w-100">
    <h1>ログインページ</h1>
    <%= form_with url: login_path do |form| %>
      <%= form.label t('.name'), class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    
      <%= form.label t('.password'), class: "form-label" %>
      <%= form.password_field :password, class: "form-control" %>
    
      <%= form.submit t('.push'), class: "btn btn-primary" %>
    <% end %>
    <%= link_to "パスワードを忘れた場合こちらへ", new_password_reset_path, class: "password_reset" %>
  </div>
</div>