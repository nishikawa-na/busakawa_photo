<% if post.like_posts.exists?(user_id: current_user) %>
  <% @current_user_like_post = post.like_posts.find_by(user_id: current_user.id) %>
  <%= link_to like_post_path(@current_user_like_post), data: { turbo_method: "delete" } do %>
    <i class="bi bi-heart-fill"></i>
  <% end %> 
<% else %>
  <%= link_to post_like_posts_path(post), data: { turbo_method: "post" } do %>
    <i class="bi bi-heart"></i>
  <% end %> 
<% end %>