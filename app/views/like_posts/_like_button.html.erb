<% if current_user.my_like_posts?(post) %>
  <%= link_to like_post_path(current_user.like_posts.find_by(post_id: post.id)), data: { turbo_method: "delete" } do %>
    <i class="bi bi-heart-fill"></i>
  <% end %> 
<% else %>
  <%= link_to post_like_posts_path(post), data: { turbo_method: "post" } do %>
    <i class="bi bi-heart"></i>
  <% end %> 
<% end %>